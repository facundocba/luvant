RewriteEngine On

# Si el archivo/directorio existe dentro de out/, servirlo desde ahí
RewriteCond %{REQUEST_URI} !^/out/
RewriteCond %{DOCUMENT_ROOT}/out%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}/out%{REQUEST_URI} -d
RewriteRule ^(.*)$ /out/$1 [L]

# Para URLs sin extensión, buscar el .html correspondiente en out/
RewriteCond %{REQUEST_URI} !^/out/
RewriteCond %{DOCUMENT_ROOT}/out%{REQUEST_URI}.html -f
RewriteRule ^(.*)$ /out/$1.html [L]

# Raíz del sitio -> out/index.html
RewriteRule ^$ /out/index.html [L]
